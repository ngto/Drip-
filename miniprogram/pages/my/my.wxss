/* pages/my/my.wxss */

.userAvatarUrl {
  width: 128rpx;
  height: 128rpx;
  overflow: hidden;
}

.userInfo {
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  margin-bottom: 40rpx;
}

.nickName {
  margin-top: 10rpx;
  font-size: 32rpx;
}

.text-title-num, .text-title {
  display: block;
  text-align: center;
}

.text-title-num {
  font-size: 38rpx;
}

.text-title {
  font-size: 24rpx;
}

.share-button {
  background: transparent;
  border-color: transparent;
}

.cu-item.arrow {
  position: relative;
}

.sharebtn {
  opacity: 0;
  position: absolute;
  border-radius: 0;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.UCenter-bg {
  height: 300rpx;
  display: flex;
  justify-content: center;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg image {
  width: 100rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}