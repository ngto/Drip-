page {
  height: 100%;
  width: 100%;
  position: relative;
}

.main {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.content {
  flex: 1;
  overflow: auto;
  overflow-y: scroll;
}

.img-box {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.img-box image {
  width: 200rpx;
  height: 200rpx;
}

.footer {
  width: 100%;
}

.no-data {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-flow: column;
}

.no-data .iconfont {
  display: block;
  font-size: 160rpx;
}

.nav-tab-box {
  padding: 30rpx 0;
}

.nav-tab-box.min {
  padding: 20rpx 0rpx;
}

.nav-tab-box.min .nav-tab {
  width: 280rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
}

.nav-tab {
  margin: 0 auto;
  width: 500rpx;
  display: flex;
  border: 1px solid #39b54a;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 10rpx;
  overflow: hidden;
}

.nav-tab-item {
  flex: 1;
}

.cu-list.menu>.cu-item.bg-white {
  background: #fff;
}

.cu-list.menu>.cu-item .content {
  display: flex;
  align-items: center;
  width: 180rpx;
  flex: none;
}

.cu-list.menu>.cu-item .action {
  flex: 1;
  text-align: right;
}

.cu-item .iconfont.bg-green {
  font-size: 50rpx;
  border-radius: 100%;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 auto;
  text-align: center;
  background: #39b54a;
  color: #fff;
}
